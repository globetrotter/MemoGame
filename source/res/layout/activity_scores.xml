<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScoresActivity" >

    <TextView
        android:id="@+id/text_scores_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_easy"
		android:background="@color/green1"/>

    <ListView
        android:id="@+id/scores_chal"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/text_scores_chal" >

    </ListView>

    <TextView
        android:id="@+id/text_scores_chal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scores_chal"
        android:layout_centerVertical="true"
        android:text="@string/score_chal"
        android:background="@color/green2"/>
    

    <ListView
        android:id="@+id/scores_easy"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/text_scores_chal"
        android:layout_alignLeft="@+id/text_scores_easy"
        android:layout_below="@+id/text_scores_easy"
        android:scrollbars="none" >

    </ListView>

</RelativeLayout>