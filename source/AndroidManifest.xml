<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tony.play.memogame"
    android:versionCode="3"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/logo"
        android:theme="@style/AppTheme" 
        android:label="@string/app_name">
        <activity
            android:name="org.tony.play.memogame.GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tony.play.memogame.GameSettingsActivity"
            android:label="@string/title_activity_game_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.tony.play.memogame.GameActivity" />
        </activity>
        <activity
            android:name="org.tony.play.memogame.ScoresActivity"
            android:label="@string/title_activity_scores" >
        </activity>
    </application>

</manifest>